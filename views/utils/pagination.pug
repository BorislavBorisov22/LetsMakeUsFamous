mixin pagination
    div.text-center
        ul.pagination.pagination-lg
            if (context.currentPage - 1 > 0)
                li
                    a(href='/' + context.pageLink + '?page=' + (context.currentPage - 1)) «
            each page in context.pages
                if (page == context.currentPage)
                    li.active
                        a(href='/' + context.pageLink + '?page=' + (page))
                            | #{page}
                else
                    li
                        a(href='/' + context.pageLink + '?page=' + (page))
                            | #{page}
            li
                a(href='/' + context.pageLink + '?page=' + (context.currentPage + 1)) »
