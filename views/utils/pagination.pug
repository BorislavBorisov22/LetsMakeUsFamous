mixin pagination
    div.text-center
        ul.pagination.pagination-lg
            if (model.currentPage - 1 > 0)
                li
                    a(href='/' + model.pageLink + '?page=' + (model.currentPage - 1)) «
            each page in model.pages
                if (page == model.currentPage)
                    li.active
                        a(href='/' + model.pageLink + '?page=' + (page))
                            | #{page}
                else
                    li
                        a(href='/' + model.pageLink + '?page=' + (page))
                            | #{page}
            li
                a(href='/' + model.pageLink + '?page=' + (model.currentPage + 1)) »