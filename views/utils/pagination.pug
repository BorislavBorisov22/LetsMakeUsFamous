mixin pagination
    div.text-center
        ul.pagination.pagination-lg
            if (context.pagination.currentPage > 1)
                if (context.isSearchQuery)
                    li
                        a#n(href='/' + context.pageLink + '?page=' + (context.pagination.currentPage - 1) + '&' + context.searchKey + '=' +  context.searchValue) «
                else 
                    li
                        a(href='/' + context.pageLink + '?page=' + (context.pagination.currentPage - 1)) «
            each page in context.pagination.pages
                if (page == context.pagination.currentPage)
                    li.active
                        if (context.isSearchQuery)
                            a(href='/' + context.pageLink + '?page=' + (page) + '&' + context.searchKey + '=' + context.searchValue)
                                | #{page}
                        else
                            a(href='/' + context.pageLink + '?page=' + (page))
                                | #{page}
                else
                    li
                        if(context.isSearchQuery)
                            a(href='/' + context.pageLink + '?page=' + (page) + '&' + context.searchKey + '=' + context.searchValue)
                                | #{page}
                        else
                            a(href='/' + context.pageLink + '?page=' + (page))
                                | #{page}
            if (context.pagination.currentPage < context.pagination.lastPage)
                if (context.isSearchQuery)
                    li
                        a(href='/' + context.pageLink + '?page=' + (context.pagination.currentPage + 1) + '&' + context.searchKey + '=' + context.searchValue) »
                else
                    li
                        a(href='/' + context.pageLink + '?page=' + (context.pagination.currentPage + 1)) »