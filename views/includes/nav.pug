mixin nav
  nav.navbar.navbar-inverse.navbar-static-top
    .container-fluid
      .navbar-header
        img.navbar-brand(href='/' src='/static/images/logo.png')
      ul.nav.navbar-nav
        li#go
          a(href='/home')
            span.glyphicon.glyphicon-home
            |  Home
        li
          a(href='/destinations')
            span.glyphicon.glyphicon-leaf
            |  Destinations
        li
          a(href='/users')
            span.glyphicon.glyphicon-book
            |  Users
      ul.nav.navbar-nav.navbar-right
            if !isAuthenticated
                li
                    a(href='/register')
                        span.glyphicon.glyphicon-user
                            |  Register
                li
                     a(href='/login')
                        span.glyphicon.glyphicon-log-in
                            |  Login
            else
                li
                    a(href='/profile')
                        img.img-responsive.thumbnail.navbar-brand.small-profile-pic(src=user.pictureUrl)
                li
                    a(href='/profile')
                            | #{user.username}
                    li.dropdown
                        a.dropdown-toggle(data-toggle='dropdown', href='#')
                            | Profile
                            span.caret
                        ul.dropdown-menu#profileMenu
                            li
                                a.glyphicon.glyphicon-cog(href='/profile')   Profile
                            li
                                a.glyphicon.glyphicon-hand-right(href='/users/'+ user.username)                                             MyLandmarks
                            li
                                a.glyphicon.glyphicon-off(href='/logout')    Logout
