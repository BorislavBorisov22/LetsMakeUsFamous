extends ../master

block content
    .row
        .col-md-offset-1.col-md-8.col-lg-6
             .col-xs-12.col-sm-4.text-center
                figure
                    img.img-circle.img-responsive(src=model.pictureUrl alt='user profile picture')
             .col-sm-12
                h2 #{model.username}
                hr.col-lg-12
                .col-xs-12.col-sm-4.col-sm-4.emphasis
                    h2
                        strong  #{model.rank}
                    p
                        span Rank
                .col-xs-12.col-sm-4.emphasis
                    h2
                        strong #{model.visitedPlaces} / #{model.landmarks.length}
                    p
                        small  Visited Places
                .col-xs-12.col-sm-4.emphasis
                    h2
                        strong 15h
                    p
                        small  Last active
    .row
        .col-md-offset-1
            each landmark, index in model.landmarks
                if (index % 5) == 0
                    .row
                else
                .col-md-2.portfolio-item.landmark 
                        a(href='#')
                            if (landmark.isVisited)
                                img.img-responsive.thumbnail(src=landmark.pictureUrl)
                            else
                                img.img-responsive.thumbnail.transparent(src=landmark.pictureUrl)
                        h5
                            | #{landmark.title}
                        p.landmark-description
                            | #{landmark.description}