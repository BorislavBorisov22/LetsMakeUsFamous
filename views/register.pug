html.no-js(lang='en')
    // <![endif]
    head
        meta(charset='UTF-8')
        // <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        title Login and Registration Form with HTML5 and CSS3
        link(href='/static/css/register.css' rel='stylesheet')
        link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        link(href='https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i', rel='stylesheet')
    body
        .container
            header
                h1 Registration Form
            section
                #container_demo
                    // hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4
                    a#toregister.hiddenanchor
                    a#tologin.hiddenanchor
                    #wrapper
                        #login.animate.form
                                h1  Sign up
                                p
                                    label.uname(for='usernamesignup') Your username
                                    input#usernamesignup(name='usernamesignup', required='required', type='text', placeholder='mysuperusername690')
                                p
                                    label.youmail(for='emailsignup')  Your email
                                    input#emailsignup(name='emailsignup', required='required', type='email', placeholder='mysupermail@mail.com')
                                p
                                    label.youpasswd(for='passwordsignup') Your password
                                    input#passwordsignup(name='passwordsignup', required='required', type='password', placeholder='eg. X8df!90EO')
                                p
                                    label.youpasswd(for='passwordsignup_confirm') Please confirm your password
                                    input#passwordsignup_confirm(name='passwordsignup_confirm', required='required', type='password', placeholder='eg. X8df!90EO')
                                p.signin.button
                                    input(type='submit', value='Sign up')
                                p.change_link
                                    | Already a member ?
                                    a.to_register(href='/Login')  Go and log in
